<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<StackPane fx:controller="controller.Controller"
           xmlns:fx="http://javafx.com/fxml">
    <VBox id="vBox" alignment="CENTER" spacing="20" >
        <Label fx:id="label" text="Enter Student's Name Below"/>
        <TextField fx:id="name" maxWidth="200"/>
        <Button fx:id="button" text="REGISTER NEW STUDENT" onAction="#myAction"/>
    </VBox>
</StackPane>